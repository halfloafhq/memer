{
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended"],
  "plugins": ["import", "prettier"],
  "rules": {
    "quotes": ["warn", "single"],
    "import/newline-after-import": ["warn", { "count": 1 }],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "indent": ["warn", 2],
    "semi": ["warn", "always"],
    "prettier/prettier": [
      "warn",
      {
        "singleQuote": true,
        "semi": true,
        "tabWidth": 2
      }
    ]
  }
}
